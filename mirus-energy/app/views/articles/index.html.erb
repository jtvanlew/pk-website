<div class="container content-lg">
  <div class="row margin-bottom-30">
    <div class="col-md-9">
      <% @articles.each do |article| %>
        <div class="row margin-bottom-50">
          <div class="col-sm-4 sm-margin-bottom-20">
            <% if article.header_img_name %>
              <img class="img-responsive" src="<%= asset_url(article.header_img_name)%>" alt="">
            <% else %>
              <img class="img-responsive" src="<%= asset_url('logo.png')%>" alt="">
            <% end %>
          </div>
          <div class="col-sm-8">
            <div class="blog-grid">
              <h3><%= link_to article.title, article_path(article) %></h3>
              <ul class="blog-grid-info">
                <li><%= link_to article.user.name, user_path(article.user.id) %> </li>
                <li><%= article.date %></li>
              </ul>
              <p><%= sanitize(truncate(article.body, length: 300)) %> <%= link_to "read more", article_path(article), { :class=>"r-more" } %></p>
            </div>
          </div>
        </div>

        <hr class="divider divider-db-dashed">
      <% end %>
      <%= paginate @articles %>
    </div>

    <div class="col-md-3">
  		<!-- Blog Thumb v3 -->
      <div class="margin-bottom-50">
					<h2 class="title-v4">Social</h2>
					<ul class="blog-social-shares">
						<li>
							<i class="rounded-x fb fa fa-facebook"></i>
							<a class="rounded-3x" href="#">Like</a>
						</li>
						<li>
							<i class="rounded-x tw fa fa-twitter"></i>
							<a class="rounded-3x" href="#">Follow Us</a>
						</li>
						<li>
							<i class="rounded-x gp fa fa-google-plus"></i>
							<a class="rounded-3x" href="#">Add to circle</a>
						</li>
					</ul>
				</div>
    </div>
  </div>

</div>
